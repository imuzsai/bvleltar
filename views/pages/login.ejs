<head>
    <%- include('../partials/head.ejs'); %>
</head>

<body>
    <div>&nbsp;</div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-primary panel-login">
                    <div class="panel-heading">BV Leltár - Bejelentkezés</div>
                    <div class="panel-body">
                     <% if ( typeof flash != 'undefined' ) { %>
                    <% if ( flash.error ) { %>
                    <div class="alert alert-danger col-md-12">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                    <% if(flash.error.length == 1) { %>
                    <strong> <%= flash.error %> </strong>
                    <% } else { %>
                    <ul>
                    <% flash.error.forEach(function(err) { %>
                        <li> <strong> <%= err %> </strong></li>
                        <% }) %>
                    </ul>
                    <% } %> 
                    
                    </div>
                    <% } %>
                    <% if ( flash.info ) { %>
                        <div class="alert alert-success col-md-12"><%= flash.info %>
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                        </div>
                    <% } %>
                    <% } %>
                                <form name="login" action="/login" method="post">
                                    <div class="form-group">
                                        <label for="user">Felhasználónév: </label>
                                        <input type="textbox" class="form-control" name="username" id="user" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="pwd">Jelszó:</label>
                                        <input type="password" class="form-control" name="password" id="pwd" required></br>
                                    </div>
                                    <button type="submit" class="btn btn-default text-center">Belépés</button>
                                </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <%- include('../partials/footer.ejs'); %>
    </footer>
</body>

</html>